<!DOCTYPE html>
<html>
  <head>
    <title>Blog</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
<nav class="navbar navbar-default navbar-fixed-top">
  <div class="container-fluid">
    <div class="navbar-header">
      <i style="margin-top:10px"class="fa fa-coffee fa-3x" aria-hidden="true"></i>

      <button
        type="button"
        class="navbar-toggle collapsed"
        data-toggle="collapse"
        data-target="#nav-collapsible-section">
        <i class="fa fa-bars" aria-hidden="true"></i>
      </button>

    </div>
    <div class="navbar-collapse collapse" id="nav-collapsible-section">
      <form class="navbar-form navbar-right" role="search">
        <div class="form-group">
          <input type="text" class="form-control" placeholder="Search">
        </div>
      </form>
      <ul class="nav navbar-nav">
        <li><%= link_to 'Home', root_path %></li>
        <li><%= link_to 'New', new_post_path%></li>
      </ul>
      <ul class="nav navbar-nav">
        <% if user_signed_in? %>
        <li><%= link_to 'Sign out', sessions_path,method: :delete if user_signed_in?%></li>
        <% else %>
        <li><%= link_to 'Sign Up', new_user_path%></li>
        <li><%= link_to 'Sign In', new_session_path%></li>
        <% end %>
      </ul>
    </div>
  </div>
</nav>

<main>
  <div class="container-fluid">
    <%= notice || alert %>
    <% if user_signed_in? %>
    <p>Hello <%=link_to current_user.full_name, edit_user_path(current_user)%></p>
    <%end%>
  </div>
  <%= yield %>
</main>
<footer>
  <div class="footer-social">
    <i class="fa fa-envelope fa-3x" aria-hidden="true"></i>
    <i class="fa fa-facebook fa-3x" aria-hidden="true"></i>
    <i class="fa fa-instagram fa-3x" aria-hidden="true"></i>
    <i class="fa fa-medium fa-3x" aria-hidden="true"></i>
    <i class="fa fa-twitter fa-3x" aria-hidden="true"></i>
  </div>
</footer>
  </body>
</html>
