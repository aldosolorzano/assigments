<div class="container">
  <h1>Update your profile</h1>
  <p><%= @user.errors.full_messages.join(', ')%></p>
  <%= form_for @user do |p| %>
  <div class="form-group">
    <%= p.label :first_name %>
    <%= p.text_field :first_name,class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= p.label :last_name %>
    <%= p.text_field :last_name, class: 'form-control'%>
  </div>
  <div class="form-group">
    <%= p.label :email %>
    <%= p.email_field :email,class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= p.label 'New password' %>
    <%= p.password_field :password,class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= p.label 'New password confirmation' %>
    <%= p.password_field :password_confirmation,class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= p.submit 'Update',class: 'btn btn-primary' %>
  </div>

  <%= link_to 'Change password', new_user_password_path(current_user) %>
  <%end%>
</div>
